<div class="page-header">
  <h1>
    <%= current_school.name.titleize %>'s Teams
    <a href="/teams/new" class="btn btn-lg btn-success">New Team</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>School</th> -->
        <th>Tournament</th>
        <th>Player 1 name</th>
        <th>Player 2 name</th>
        <th>Player 3 name</th>
        <th>Player 4 name</th>
        <th>Player 5 name</th>
        <th>Actions</th>
      </tr>

      <% @teams.each do |team| %>
      <tr>
        <!-- <td><%= team.school_id %></td> -->
        <td><%= team.tournament.name %></td>
        <td><%= team.player_1_name %></td>
        <td><%= team.player_2_name %></td>
        <td><%= team.player_3_name %></td>
        <td><%= team.player_4_name %></td>
        <td><%= team.player_5_name %></td>
        <td>
          <a href="/teams/<%= team.id %>" class="btn btn-primary">Show</a>
          <a href="/teams/<%= team.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_team/<%= team.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
