<div class="page-header">
  <h3>Team #<%= @team.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>School</dt>
      <dd><%= @team.school_id %></dd>

      <dt>Tournament</dt>
      <dd><%= @team.tournament_id %></dd>

      <dt>Player 1 name</dt>
      <dd><%= @team.player_1_name %></dd>

      <dt>Player 2 name</dt>
      <dd><%= @team.player_2_name %></dd>

      <dt>Player 3 name</dt>
      <dd><%= @team.player_3_name %></dd>

      <dt>Player 4 name</dt>
      <dd><%= @team.player_4_name %></dd>

      <dt>Player 5 name</dt>
      <dd><%= @team.player_5_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/teams" class="btn btn-primary">
        Back
      </a>
      <a href="/teams/<%= @team.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_team/<%= @team.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
