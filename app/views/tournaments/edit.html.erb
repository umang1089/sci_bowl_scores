<!-- Validation failure messages -->
<% if @tournament.errors.any? %>
  <% @tournament.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Tournament #<%= @tournament.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_tournament/<%= @tournament.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @tournament.name %>">
      </div>

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @tournament.location %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @tournament.date %>">
      </div>

      <button class="btn btn-warning">
        Update Tournament
      </button>
      or
      <a href="/tournaments/<%= @tournament.id %>">Cancel</a>
    </form>
  </div>
</div>
