<div class="page-header">
  <h1>
    Games
    <a href="/games/new" class="btn btn-lg btn-success">New Game</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Team a</th>
        <th>Team b</th>
        <th>Team a score</th>
        <th>Team b score</th>
        <th>Actions</th>
      </tr>

      <% @games.each do |game| %>
      <tr>
        <td><%= game.team_a_id %></td>
        <td><%= game.team_b_id %></td>
        <td><%= game.team_a_score %></td>
        <td><%= game.team_b_score %></td>
        <td>
          <a href="/games/<%= game.id %>" class="btn btn-primary">Show</a>
          <a href="/games/<%= game.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_game/<%= game.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
