<div class="page-header">
  <h3>Game #<%= @game.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Team a</dt>
      <dd><%= @game.team_a_id %></dd>

      <dt>Team b</dt>
      <dd><%= @game.team_b_id %></dd>

      <dt>Team a score</dt>
      <dd><%= @game.team_a_score %></dd>

      <dt>Team b score</dt>
      <dd><%= @game.team_b_score %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/games" class="btn btn-primary">
        Back
      </a>
      <a href="/games/<%= @game.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_game/<%= @game.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
